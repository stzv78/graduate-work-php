<div class="container">
    <h2>Добро пожаловать {{ user['user'] }}!</h2>
    <form method="POST" action="?/login/logout">
        <button type="submit" name="logout" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-off"></span>Выйти</button>
    </form>
</div>
<div class="container">
    <p style="color: #dd4444">{{ error }}</p>
    <div style="float: left">
        <form method="POST" action="?/todo/{{ action }}">
            <input type="text" name="description" placeholder="Описание задачи" value="{{ description }}">
            <input type="submit" name="save" value="{{ button }}">
        </form>
    </div>
    <form method="POST">
        <label for="sort">Сортировать по:</label>
        <select name="sort_by">
            <option value="date_added">Дате добавления</option>
            <option value="is_done">Статусу</option>
            <option value="description">Описанию</option>
        </select>
        <input type="submit" name="sort" value="Отсортировать">
    </form>
</div>
<div style="clear: both"><br></div>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Описание задачи</th>
            <th>Дата добавления</th>
            <th>Статус</th>
            <th>Действие</th>
            <th>Ответственный</th>
            <th>Закрепить задачу за пользователем</th>
        </tr>
        {% for data in table_1 %}
        <tr>
            <td>{{ data['description'] }}</td>
            <td>{{ data['date_added'] }}</td>
            {% if data['is_done'] == 1 %}
            <td><span style='color: green;'>Выполнено</span></td>
            {% elseif data['is_done'] == 0 %}
            <td><span style='color: orange;'>В процессе</span></td>
            {% endif %}
            <td>
                <a href='?/todo/edit/{{ data['id'] }}'>Изменить</a>
                <a href='?/todo/done/{{ data['id'] }}'>Выполнить</a>
                <a href='?/todo/delete/{{ data['id'] }}'>Удалить</a>
            </td>
            <td>{{ data['name'] }}</td>
            <td>
                <form method="POST" action="?/todo/assigned">
                    <select name='assigned_user_id'>
                        {% for name in users %}
                        <option value="{{ name['id'] }}&{{ data['id'] }}">
                            {{ name['name'] }}
                        </option>
                        {% endfor %}
                    </select>
                    <input type='submit' name='assign' value='Переложить ответственность'>
                </form>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
<div class="container">
    <br>
    <h3>Переложенные на Вас задачи:</h3>
    <form method="POST">
        <label for="sort_2">Сортировать по:</label>
        <select name="sort_by_2">
            <option value="date_added">Дате добавления</option>
            <option value="is_done">Статусу</option>
            <option value="description">Описанию</option>
        </select>
        <input type="submit" name="sort_2" value="Отсортировать">
    </form>
</div>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Описание задачи</th>
            <th>Дата добавления</th>
            <th>Статус</th>
            <th>Действие</th>
            <th>Автор</th>
        </tr>
        {% for data in table_2 %}
        <tr>
            <td>{{ data['description'] }}</td>
            <td>{{ data['date_added'] }}</td>
            {% if data['is_done'] == 1 %}
                <td><span style='color: green;'>Выполнено</span></td>
            {% elseif data['is_done'] == 0 %}
                <td><span style='color: orange;'>В процессе</span></td>
            {% endif %}
            <td>
                <a href='?/todo/done/{{ data['id'] }}'>Выполнить</a>
            </td>
            <td>{{ data['name'] }}</td>
        </tr>
        {% endfor %}
    </table>
</div>